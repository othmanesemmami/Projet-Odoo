<odoo>
  <record id="view_equipment_tree" model="ir.ui.view">
    <field name="name">gestion_reservation.equipment.tree</field>
    <field name="model">gestion_reservation.equipment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="capacity"/>
        <field name="reservation_count"/>
        <button name="action_create_reservation" string="RÃ©server" type="object" class="btn-primary"/>
      </tree>
    </field>
  </record>

  <record id="view_equipment_form" model="ir.ui.view">
    <field name="name">gestion_reservation.equipment.form</field>
    <field name="model">gestion_reservation.equipment</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="capacity"/>
            <field name="active"/>
          </group>
          <group>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
